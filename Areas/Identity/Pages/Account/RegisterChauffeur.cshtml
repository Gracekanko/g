@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

@{
    Layout = "_LayoutLogin";
}

<div class="card mb-3">

    <div class="card-body">

        <div class="pt-4 pb-2">
            <h5 class="card-title text-center pb-0 fs-4">Securisez vos recettes</h5>
        </div>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="col-12">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" />
                
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="col-12">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Mot de passe" />
                
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="col-12">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirmer mot de passe" />
                
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="col-12">
                <input asp-for="Input.Nom" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Nom" />

                <span asp-validation-for="Input.Nom" class="text-danger"></span>
            </div>
            <div class="col-12">
                <input asp-for="Input.Prenom" class="form-control" autocomplete="new-password" aria-required="true" placeholder="prenom" />

                <span asp-validation-for="Input.Prenom" class="text-danger"></span>
            </div>

            <div class="col-12">
                <button id="registerSubmit" class="btn btn-primary w-100" type="submit">Crer compte</button>
            </div>
            <div class="col-12">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Connectez vous</a>
            </div>
        </form>


    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
